<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<VBox fx:id="background" alignment="CENTER" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" spacing="35.0" style="-fx-background-color: linear-gradient(to bottom, darkcyan, mediumpurple);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ControllerMain">
   <HBox alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="780.0" spacing="20.0">
      <children>
         <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onSettingsClick" onMouseEntered="#onSettingsButtonEntered" onMouseExited="#onSettingsButtonExited" prefHeight="50.0" prefWidth="50.0" style="-fx-background-radius: 3000; -fx-background-color: transparent; -fx-text-fill: transparent; -fx-border-color: transparent;" textAlignment="CENTER">
            <graphic>
               <ImageView fx:id="SettingImage" fitHeight="50.0" fitWidth="50.0" style="-fx-opacity: 0.3;">
                  <image>
                     <Image url="@gear.png" />
                  </image>
               </ImageView>
            </graphic></Button>
         <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLoginClick" onMouseEntered="#onLoginButtonEntered" onMouseExited="#onLoginButtonExited" prefHeight="50.0" prefWidth="50.0" style="-fx-background-radius: 3000; -fx-background-color: transparent; -fx-text-fill: transparent; -fx-border-color: transparent;" textAlignment="CENTER">
            <graphic>
               <ImageView fx:id="LoginImage" fitHeight="50.0" fitWidth="50.0" style="-fx-opacity: 0.3;">
                  <image>
                     <Image url="@user-interface.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </children>
      <VBox.margin>
         <Insets bottom="-30.0" right="20.0" />
      </VBox.margin>
   </HBox>
   <VBox alignment="TOP_CENTER" prefHeight="230.0" prefWidth="600.0">
      <children>
          <Label fx:id="welcomeText" alignment="TOP_CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="600.0" text="Witaj w Kwizzie" textAlignment="CENTER" wrapText="true">
            <font>
               <Font name="Arial" size="38.0" />
            </font>
            <graphic>
               <Rectangle fx:id="rectangle" arcHeight="10.0" arcWidth="5.0" fill="mediumpurple" height="200.0" scaleX="2.0" stroke="BLACK" strokeType="INSIDE" style="-fx-arc-height: 100; -fx-arc-width: 40;" width="230.0" />
            </graphic>
         </Label>
      </children>
   </VBox>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
      <children>
          <Button fx:id="button0" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onPlayButtonClick" onMouseEntered="#onButtonEntered" onMouseExited="#onButtonExited" prefHeight="40.0" prefWidth="225.0" style="-fx-background-radius: 5;" text="Rozwiąż quiz" />
          <Button fx:id="button1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onCheckHistoryClick" onMouseEntered="#onButtonEntered" onMouseExited="#onButtonExited" prefHeight="40.0" prefWidth="225.0" style="-fx-background-radius: 5;" text="Sprawdź Historię">
            <VBox.margin>
               <Insets />
            </VBox.margin></Button>
          <Button fx:id="button2" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onAddQuestionButtonClick" onMouseEntered="#onButtonEntered" onMouseExited="#onButtonExited" prefHeight="40.0" prefWidth="225.0" style="-fx-background-radius: 5;" text="Dodaj Pytanie" />
          <Button fx:id="button3" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onExitClick" onMouseEntered="#onButtonEntered" onMouseExited="#onButtonExited" prefHeight="40.0" prefWidth="225.0" style="-fx-background-radius: 5;" text="Wyjdź" />
      </children>
   </VBox>

</VBox>
