      <Label alignment="CENTER" layoutX="175.0" layoutY="243.0" prefHeight="50.0" prefWidth="250.0" text="Wybierz kategorię" />
      <ChoiceBox layoutX="175.0" layoutY="293.0" prefHeight="50.0" prefWidth="250.0" />
      <RadioButton fx:id="test" layoutX="227.0" layoutY="73.0" mnemonicParsing="false" onAction="#onModeRadioClick" text="Test">
         <toggleGroup>
            <ToggleGroup fx:id="mode" />
